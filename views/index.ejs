<%- include('partials/header') %>

<section class="banner">
    <div class="container">
        <div class="row mb-10">
            <div class="banner__slider splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <% banners.carousel.forEach(el => { %>
                            <li class="splide__slide">
                            <a href="<%= el.url %>">
                                <picture>
                                    <source media="(max-width: 800px)" srcset="/images/banner/<%= el.img %>">
                                    <img src="/images/banner/<%= el.img %>" alt="image">
                                </picture>
                            </a>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <div class="banner__ads">
                <a class="banner__ad mb-10" href="/">
                    <img src="/images/banner/banner2.jpg" alt="banner image">
                </a>
                <a class="banner__ad" href="/">
                    <img src="/images/banner/banner3.jpg" alt="banner image">
                </a>
            </div>
        </div>
    </div>
</section>

<section class="categories categories-mobile mb-30">
    <div class="container">
        <ul class="categories__list">
            <% categories.slice(0, 12).forEach((category, index) => { %>
                <li class="categories__item">
                    <div class="categories__img">
                        <img src="/images/categories/<%= category.thumb %>" alt="">
                    </div>
                    <div class="categories__name"><%= category.ru_name[0].toUpperCase() + category.ru_name.substring(1) %></div>
                    <a class="categories__link" href="/category/<%= category.slug %>"></a>
                </li>
            <% }) %>
        </ul>
    </div>
</section>

<div class="container">
    <div class="ad-tape">
