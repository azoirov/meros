<% var user %>

<%- include('../partials/header') %>

<div class="container pt-20">
    <nav class="breadcrumb">
        <ol class="breadcrumb-list">
            <li class="breadcrumb-item">
                <a class="breadcrumb-link" href="/">
                    Главная
                </a>
            </li>
            <li class="breadcrumb-item">
                Заказы
            </li>
        </ol>
    </nav>
</div>

<section class="cabinet">
    <div class="container">
        <div class="cabinet__content">
            <%- include("sidebar")%>
            <main class="main--message">
                <ul class="tab-panel__list">
                    <li class="tab-panel__item">
                        <a class="tab-panel__link active">
                            Заказы
                        </a>
                        <span><%= orders.length %></span>
                    </li>
                </ul>
                <div class="tab__content">
                    <ul class="order-card__list">
                        <% orders.forEach(order => {  %>
                            <% order.items.forEach(order => {  %>
                                <li class="order-card__item">
                                    <div class="card__header">
                                        <div class="order__info-box">
                                            <h3 class="order__info__heading">
                                                Заказ от <%= order.time %>
                                            </h3>
                                            <span class="order__id">
                                    </span>
                                        </div>
                                        <div class="order__cost-box">
                                            <h3 class="order__cost__heading">
                                                <%= Math.round((order["product.price"]  * (100 - order["product.sale"])/100)) %> сум
                                            </h3>
                                            <span class="order__pay-type">
                                        <%= order.type === "card" ? 'Картой онлайн' : 'Оплата наличными при доставке' %>
                                    </span>
                                        </div>
                                    </div>
                                    <div class="card__body order__submitted">
                                        <div class="card__body--texts">
                                            <div class="row">
                                                <h3 class="courier__heading">
                                                    Доставка курьером
                                                </h3>
                                                <div class="status__order">Отправлен
                                                    <div class="status-levels__order">
                                                        <ul class="status-level__list">
                                                            <li class="status-level__item active">
                                                                <h3 class="status-level__heading">
                                                                    ОЖИДАЕТ ОПЛАТЫ
                                                                </h3>
                                                                <span>
                                                            Заказ ожидает оплаты
                                                        </span>
                                                            </li>
                                                            <li class="status-level__item active">
                                                                <h3 class="status-level__heading">
                                                                    ПРИНЯТО В РАБОТУ
                                                                </h3>
                                                                <span>
                                                            Заказ оплачен. На данном этапе производится
                                                            комплектация
                                                            и упаковка товаров
                                                        </span>
                                                            </li>
                                                            <li class="status-level__item active">
                                                                <h3 class="status-level__heading">
                                                                    ПЕРЕДАНО В ДОСТАВКУ
                                                                </h3>
                                                                <span>
                                                            На данном этапе происходит транспортировка товаров
                                                            до
                                                            точки, из которой его заберет курьер
                                                        </span>
                                                            </li>
                                                            <li class="status-level__item active">
                                                                <h3 class="status-level__heading">
                                                                    У КУРЬЕРА
                                                                </h3>
                                                                <span>
                                                            Курьер забрал ваши товары со склада и начал
                                                            развозить
                                                            заказы
                                                        </span>
                                                            </li>
                                                            <li class="status-level__item">
                                                                <h3 class="status-level__heading">
                                                                    ПОЛУЧЕНО
                                                                </h3>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <p class="card__text mb-10">
                                                Комментарий: <%= order.comment %>
                                            </p>
                                            <p class="card__text">
                                                Адрес: <%= order.region %>, <%= order.address%>
                                            </p>
                                        </div>
                                        <div class="card__body--img">
                                            <img src="/images/products/<%= order["product.thumb"][0] %>" alt="product img" class="product__img">
                                        </div>
                                    </div>
                                </li>
                            <% }) %>
                        <% }) %>
                    </ul>
                </div>
            </main>
        </div>
    </div>
</section>


<%- include('toast') %>
<%- include('modal-change-avatar') %>
<%- include('../partials/catalog-modal') %>
<%- include('../partials/categories-modal') %>

<%- include('../partials/footer') %>